{
  "simulation_type": "solid_mechanics",
  "pde_config": {
    "pde_type": "elasticity",
    "equations": [
      "\\nabla \\cdot \\sigma + f = 0",
      "\\sigma = C : \\varepsilon",
      "\\varepsilon = \\frac{1}{2}(\\nabla u + (\\nabla u)^T)"
    ],
    "variables": ["displacement"],
    "boundary_conditions": [],
    "initial_conditions": [],
    "material_properties": {
      "youngs_modulus": null,
      "poisson_ratio": null,
      "density": null
    },
    "mesh_parameters": {
      "mesh_type": "structured",
      "resolution": 50,
      "element_type": "hexahedral",
      "dimensions": {
        "length": null,
        "width": null,
        "height": null
      }
    },
    "solver_parameters": {
      "linear_solver": "gmres",
      "preconditioner": "ilu",
      "tolerance": 1e-6,
      "max_iterations": 1000
    },
    "function_space_order": 1,
    "time_stepping": {
      "time_step": 0.01,
      "total_time": 1.0,
      "method": "backward_euler"
    }
  },
  "required_components": {
    "material_type": null,
    "geometry_type": null,
    "geometry_dimensions": null,
    "boundary_conditions": [],
    "initial_conditions": [],
    "external_loads": []
  },
  "boundary_condition_options": [
    {
      "type": "dirichlet",
      "name": "Fixed Displacement",
      "description": "Specify displacement at boundary",
      "required_fields": ["displacement_value", "boundary_location"],
      "example": "0 displacement at fixed end"
    },
    {
      "type": "neumann",
      "name": "Applied Force/Stress",
      "description": "Specify force or stress at boundary",
      "required_fields": ["force_value", "boundary_location"],
      "example": "1000N force at free end"
    },
    {
      "type": "robin",
      "name": "Spring Support",
      "description": "Elastic support with spring constant",
      "required_fields": ["spring_constant", "boundary_location"],
      "example": "Spring support with k=1000 N/m"
    }
  ],
  "external_load_options": [
    {
      "type": "body_force",
      "name": "Uniform Distributed Load",
      "description": "Uniform load applied along the length/area",
      "example": "100N/m uniform load along length",
      "parameters": ["value", "direction", "location"]
    },
    {
      "type": "surface_load",
      "name": "Surface Pressure",
      "description": "Pressure applied to surfaces",
      "example": "5000 Pa pressure on top surface",
      "parameters": ["value", "surface", "direction"]
    },
    {
      "type": "point_load",
      "name": "Point Force",
      "description": "Concentrated force at specific point",
      "example": "1000N force at center",
      "parameters": ["value", "location", "direction"]
    },
    {
      "type": "gravity",
      "name": "Gravitational Load",
      "description": "Gravity acting on the body",
      "example": "gravity in negative z direction",
      "parameters": ["direction"]
    }
  ],
  "initial_condition_options": [
    {
      "type": "zero_displacement",
      "name": "Zero Initial Displacement",
      "description": "No initial displacement",
      "required_fields": [],
      "example": "Starting from rest"
    },
    {
      "type": "initial_displacement",
      "name": "Initial Displacement Field",
      "description": "Prescribed initial displacement",
      "required_fields": ["displacement_function"],
      "example": "Initial displacement u(x,y,z) = 0.01*sin(πx/L)"
    }
  ],
  "material_property_sources": {
    "youngs_modulus": {
      "unit": "Pa",
      "description": "Elastic modulus, resistance to deformation"
    },
    "poisson_ratio": {
      "unit": "dimensionless",
      "description": "Ratio of lateral to axial strain"
    },
    "density": {
      "unit": "kg/m³",
      "description": "Mass per unit volume"
    }
  },
  "geometry_dimension_requirements": {
    "bar": ["length", "width", "height"],
    "beam": ["length", "width", "height"],
    "plate": ["length", "width", "thickness"],
    "cube": ["length", "width", "height"],
    "cylinder": ["length", "radius"],
    "rod": ["length"],
    "disc": ["radius"],
    "line": ["length"]
  }
}
